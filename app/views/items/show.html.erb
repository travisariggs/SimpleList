<div class="container">
	<div><%= link_to "Edit Item", edit_user_item_path(current_user, @item) %></div>
	<hr>
	<dl class="dl-horizontal">
		<dt>Description</dt>
		<dd><%= @item.description %></dd>
		<dt>Priority</dt>
		<dd><%= @item.priority %></dd>
		<dt>Due Date</dt>
		<dd><%= @item.due_date %></dd>
		<dt>Status</dt>
		<dd><%= @item.completed ? "Complete" : "Incomplete" %></dd>
	</dl>
	<hr>
	<%= button_to "Delete Item", user_item_path(current_user, @item), class: 'btn btn-danger pull-right', method: :delete %>
</div>