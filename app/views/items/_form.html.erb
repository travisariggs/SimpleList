<div>
  <%= form_for [current_user, @item], html: {class: "form-horizontal"} do |i| %>
    <div class="form-group">
      <%= i.label :description, "Description", class: "col-sm-2 col-sm-offset-2 control-label" %>
      <div class="col-sm-6">
        <%= i.text_field :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= i.label :priority, "Priority", class: "col-sm-2 col-sm-offset-2 control-label" %>
      <div class="col-sm-6">
        <%= i.text_field :priority, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= i.label :due_date, "Due Date", class: "col-sm-2 col-sm-offset-2 control-label" %>
      <div class="col-sm-6">
        <%= i.date_select :due_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= i.submit (@item.new_record? ? "Add to List" : "Update"), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
 </div>